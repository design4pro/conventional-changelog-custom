{
  "name": "conventional-changelog-release-me",
  "version": "1.0.1",
  "description": "Conventional Changelog custom preset for Release Me.",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel --copy-files --out-dir dist src",
    "check-coverage": "nyc check-coverage --statements 100 --branches 85 --functions 100 --lines 100",
    "commit": "git-cz",
    "cover": "nyc --reporter=lcov npm t",
    "lint": "jshint *.js --exclude node_modules && jscs *.js",
    "prebuild": "rimraf dist",
    "precommit": "npm run validate",
    "release": "../release-me/dist/cli.js",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "start": "npm run test",
    "test": "echo \"Error: no test specified\"",
    "validate": "npm run cover && npm run check-coverage",
    "watch:test": "npm t -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/design4pro/conventional-changelog-release-me.git"
  },
  "keywords": [
    "release-me",
    "conventional-changelog",
    "preset"
  ],
  "author": {
    "name": "Rafa≈Ç Wolak",
    "email": "r.wolak@design4.pro",
    "url": "https://www.design4.pro"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/design4pro/conventional-changelog-release-me/issues"
  },
  "homepage": "https://github.com/design4pro/conventional-changelog-release-me#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.24.1",
    "better-than-before": "^1.0.0",
    "chai": "^4.0.0",
    "codecov": "^2.2.0",
    "commitizen": "^2.9.6",
    "conventional-changelog": "^1.1.3",
    "conventional-changelog-core": "^1.8.0",
    "conventional-commits-parser": "^1.3.0",
    "cz-conventional-changelog": "^2.0.0",
    "find-config": "^1.0.0",
    "git-dummy-commit": "^1.3.0",
    "husky": "^0.13.4",
    "istanbul": "^0.4.5",
    "jscs": "^3.0.7",
    "jshint": "^2.9.4",
    "mocha": "^3.4.2",
    "nyc": "^10.3.2",
    "proxyquire": "^1.8.0",
    "rimraf": "^2.6.1",
    "semantic-release": "^6.3.6",
    "shelljs": "^0.7.7",
    "standard-changelog": "^1.0.1",
    "through2": "^2.0.3"
  },
  "dependencies": {
    "compare-func": "^1.3.2",
    "extend": "^3.0.1",
    "findup": "^0.1.5",
    "github-url-from-git": "^1.5.0"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  }
}
